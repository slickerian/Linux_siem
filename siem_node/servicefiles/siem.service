[Unit]
Description=Siem Agent
After=network.target

[Service]
WorkingDirectory=/home/mechanic/siem
ExecStart=/home/mechanic/siem/venv/bin/python /home/mechanic/siem/main.py
Environment="PATH=/home/mechanic/siem/venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin"
Environment="PYTHONPATH=/home/mechanic/siem/venv/lib/python3.12/site-packages"
Restart=always
RestartSec=3
User=root
Environment=PYTHONUNBUFFERED=1


[Install]
WantedBy=multi-user.target
